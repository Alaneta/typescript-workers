{
  "name": "typescript-express-template",
  "version": "1.0.3",
  "scripts": {
    "start": "yarn run build && yarn run serve:local",
    "debug": "yarn run serve:debug",
    "build": "yarn run clean && yarn run compile",
    "compile": "tsc",
    "clean": "rm -rf dist",
    "test": "jest",
    "coverage": "jest --coverage",
    "serve:production": "node ./dist/app.js",
    "serve:local": "npx nodemon -L --watch './**/*.ts' --exec NODE_OPTIONS='newrelic ts-node --files' -r dotenv/config src/app.ts",
    "serve:debug": "NODE_ENV=development npx nodemon -L --watch './**/*.ts' --exec node --inspect=9222 -r ts-node/register -r dotenv/config src/app.ts",
    "lint": "eslint --ext .ts src/**/*.ts",
    "format": "eslint --ext .ts --fix src/**/*.ts & tsc --pretty & prettier --write 'src/**/*.ts'",
    "prepare": "husky install"
  },
  "devDependencies": {
    "@types/body-parser": "^1.19.2",
    "@types/cookie-parser": "^1.4.3",
    "@types/express": "^4.17.17",
    "@types/jest": "^29.5.3",
    "@types/luxon": "^3.3.1",
    "@types/morgan": "^1.9.4",
    "@types/newrelic": "^9.14.0",
    "@types/node": "^18",
    "@types/pino-http": "^5.8.1",
    "@types/supertest": "^2.0.12",
    "@types/validator": "^13.9.0",
    "@typescript-eslint/eslint-plugin": "^6.2.1",
    "@typescript-eslint/parser": "^6.2.1",
    "eslint": "^8.46.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-airbnb-typescript": "^18.0.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-prettier": "^5.0.0",
    "husky": "^8.0.3",
    "jest": "^29.6.2",
    "nodemon": "^3.0.1",
    "prettier": "^3.2.5",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.1",
    "tsc": "^2.0.4",
    "typescript": "^5.1.6"
  },
  "dependencies": {
    "axios": "^1.4.0",
    "body-parser": "^1.20.2",
    "cookie-parser": "^1.4.6",
    "dotenv": "^16.3.1",
    "envalid": "^7.3.1",
    "express": "^4.18.2",
    "http-status": "^1.6.2",
    "jest-junit": "^16.0.0",
    "lodash": "^4.17.21",
    "luxon": "^3.3.0",
    "mysql2": "^3.6.0",
    "newrelic": "^10.6.1",
    "pino": "^8.15.0",
    "pino-http": "^8.4.0",
    "pino-pretty": "^10.2.0",
    "reflect-metadata": "^0.1.13",
    "sequelize": "^6.32.1",
    "sequelize-typescript": "^2.1.5",
    "sqlite3": "^5.1.6",
    "supertest": "^6.3.3"
  },
  "engines": {
    "node": ">=16"
  }
}
